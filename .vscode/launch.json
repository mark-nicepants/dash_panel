{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Dash (Production)",
      "type": "dart",
      "request": "launch",
      "program": "dash_example/bin/dash_example.dart",
      "args": ["dash_example/database"],
      "cwd": "${workspaceFolder}",
      "console": "terminal",
      "env": {
        "DASH_ENV": "production"
      }
    },
    {
      "name": "Dash (Hot Reload)",
      "type": "dart",
      "request": "launch",
      "program": "dash_example/bin/dash_example.dart",
      "args": ["dash_example/database"],
      "cwd": "${workspaceFolder}",
      "console": "terminal",
      "vmAdditionalArgs": [
        "--enable-vm-service",
        "--observe"
      ]
    }
  ]
}
