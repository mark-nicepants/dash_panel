{
  "name": "dash-assets",
  "version": "0.1.0",
  "private": true,
  "description": "Asset build tools for Dash admin panel",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "NODE_ENV=production postcss resources/css/dash.css -o resources/dist/css/dash.min.css",
    "build:js": "esbuild resources/js/app.js --bundle --minify --format=iife --outfile=resources/dist/js/app.min.js",
    "dev": "npm-run-all --parallel dev:*",
    "dev:css": "postcss resources/css/dash.css -o resources/dist/css/dash.css",
    "dev:js": "esbuild resources/js/app.js --bundle --format=iife --outfile=resources/dist/js/app.js"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^4.1.17"
  }
}
