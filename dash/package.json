{
  "name": "dash-assets",
  "version": "0.1.0",
  "private": true,
  "description": "Asset build tools for Dash admin panel",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss resources/css/dash.css --use autoprefixer --use cssnano -o resources/dist/css/dash.min.css",
    "build:js": "esbuild resources/js/app.js --bundle --minify --format=iife --outfile=resources/dist/js/app.min.js",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "postcss resources/css/dash.css --use autoprefixer -o resources/dist/css/dash.css --watch",
    "watch:js": "esbuild resources/js/app.js --bundle --format=iife --outfile=resources/dist/js/app.js --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "esbuild": "^0.19.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^11.0.0"
  }
}
